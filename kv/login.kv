<Login>:
    name: "loginpage"
    MDBoxLayout:
        adaptive_height: True
        spacing: "10dp"
        orientation: "vertical"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size_hint: .9, .9


        MDLabel:
            theme_label_color: "Custom"
            #md_bg_color: [0.28, 0.35, 0.49, 0.1]
            size_hint: 1, 0.4
            font_style: "Headline"
            role: "medium"
            text: "BEM-VINDO!"
            halign: "center"
            radius: 15

        MDBoxLayout:
            #md_bg_color: [0.28, 0.35, 0.9, 0.1]
            adaptive_height: True
            orientation: "vertical"
            spacing: "10dp"

            MDTextField:
                id: campo_email
                halign: "left"
                mode: "outlined"
                multiline : False
                radius: 20
                text: "pedrovbittencourt@gmail.com"

                MDTextFieldTrailingIcon:
                    icon: "account"

                MDTextFieldHintText:
                    text: "E-MAIL"

                MDTextFieldHelperText:
                    text: ""
                    mode: "persistent"

            MDTextField:
                id: campo_senha
                halign: "left"
                mode: "outlined"
                multiline : False
                radius: 20
                password: False if box_senha.active else True
                password_mask: "â€¢"

                MDTextFieldLeadingIcon:
                    icon: "eye-off-outline" if campo_senha.password else "eye-outline"

                MDTextFieldTrailingIcon:
                    icon: "key-outline"

                MDTextFieldHintText:
                    text: "SENHA"

            MDBoxLayout:
                #md_bg_color: [0.98, 0.75, 0.49, 0.1]
                adaptive_height: True
                orientation: "horizontal"
                spacing: "10dp"

                MDCheckbox:
                    pos_hint: {"center_y": 0.5, "center_x": 0.5}
                    id: box_senha

                MDLabel:
                    halign: "left"
                    text: "Esconder senha" if box_senha.active else "Mostrar senha"
                    font_style: "Body"
                    role: "small"


        MDBoxLayout:
            pos_hint: {"center_x": 0.5}
            spacing: "10dp"

            #md_bg_color: [0.98, 0.35, 0.49, 0.1]
            orientation: "vertical"
            adaptive_height: True


            MDButton:
                style: "filled"
                pos_hint: {"top": 1, "center_x": 0.5}
                theme_width: "Custom"
                height: "56dp"
                width: "200dp"
                on_release: app.fazer_login(campo_email, campo_senha)

                MDButtonText:
                    pos_hint: {"center_x": .5, "center_y": .5}
                    text: "LOGIN"
                    font_style: "Title"

            MDButton:
                pos_hint: {"top": 1, "center_x": 0.5}
                style: "text"
                on_release: app.mudar_tela("cadastropage", "left")
                MDButtonText:
                    text: "Fazer Cadastro"


        MDLabel:
            theme_label_color: "Custom"
            halign: "center"
            valign: "bottom"
            #md_bg_color: [0.68, 0.55, 0.69, 0.1]
            radius: 15

