<Cadastro>:
    MDBoxLayout:
        orientation: "vertical"
        padding: "10dp"
        pos_hint: {"top": 0.95, "center_x": 0.5}
        size_hint: 0.9, 0.33

        MDLabel:
            text: "SMART REVISION"
            bold: True
            font_style: "Headline"
            role: "medium"
            halign: "center"
            radius: [15]
            size_hint: 1, 0.2

        MDLabel:
            text: "SEJA BEM-VINDO E BOA REVISÃO!"
            font_style: "Title"
            role: "medium"
            halign: "center"
            radius: [15]
            size_hint: 1, 0.06

        MDLabel:
            text: "Pedimos um cadastro para que você consiga acessar suas revisões a partir de qualquer outro dispositivo."
            font_style: "Body"
            role: "small"
            halign: "center"
            radius: [15]
            size_hint: 1, 0.1
            text_color: [0.5, 0.5, 0.5, 1]


    MDTextField:
        id: campo_email
        halign: "left"
        mode: "filled"
        radius: dp(15)
        required: False
        theme_bg_color: "Custom"
        fill_color_normal: 0, 0, 0, 0
        fill_color_focus: 0, 0, 0, 0
        pos_hint: {"top": 0.63, "center_x": 0.5}
        size_hint: 0.9, 0.6


        MDTextFieldHintText:
            text: "E-MAIL"


        MDTextFieldTrailingIcon:
            icon: "email-outline"

        MDTextFieldHelperText:
            id: email_hint
            text: "Insira um e-mail válido: user@gmail.com"

    MDTextField:
        id: campo_senha
        halign: "left"
        mode: "filled"
        radius: dp(15)
        required: False
        password: False if check_exibicao_senha.active else True
        password_mask: "•"
        pos_hint: {"top": 0.5, "center_x": 0.5}
        size_hint: 0.9, 0.6
        height: "20dp"
        theme_bg_color: "Custom"
        fill_color_normal: 0, 0, 0, 0
        fill_color_focus: 0, 0, 0, 0

        MDTextFieldHintText:
            text: "SENHA"

        MDTextFieldLeadingIcon:
            icon: "eye-off-outline" if campo_senha.password else "eye-outline"

        MDTextFieldTrailingIcon:
            icon: "key-outline"



    MDBoxLayout:
        orientation: "horizontal"
        pos_hint: {"center_x": 0.5, "center_y": 0.4}
        size_hint: 0.9, None
        height: "48dp"
        spacing: "8dp"

        MDCheckbox:
            id: check_exibicao_senha
            size_hint: None, None

        MDLabel:
            id: texto_exibicao_senha
            text: "Mostrar senha" if campo_senha.password else "Esconder senha"
            style: "Label"
            role: "medium"
            height: self.texture_size[1]
            halign: 'left'
            size_hint_y: None




    MDButton:
        style: "text"
        pos_hint: {"center_x": 0.5, "top": 0.28}

        MDButtonText:
            text: "Já tenho uma conta, fazer login"
            font_style: "Label"
            role: "medium"

    MDButton:
        style: "tonal"
        pos_hint: {"center_x": 0.5, "top": 0.35}

        MDButtonText:
            text: "Esqueci minha senha"
            font_style: "Label"
            role: "medium"

