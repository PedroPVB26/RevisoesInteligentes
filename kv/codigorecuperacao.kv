<CodigoRecuperacao>:
    MDBoxLayout:
        adaptive_height: True
        spacing: "20dp"
        orientation: "vertical"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size_hint: .9, .9


        MDLabel:
            theme_label_color: "Custom"
            #md_bg_color: [0.28, 0.35, 0.49, 0.1]
            size_hint: 1, 0.4
            font_style: "Headline"
            role: "small"
            text: "Recuperação de senha"
            halign: "center"
            radius: 15

        MDBoxLayout:
            #md_bg_color: [0.28, 0.35, 0.9, 0.1]
            adaptive_height: True
            orientation: "vertical"
            spacing: "10dp"

            MDTextField:
                id: campo_codigo_recuperacao
                halign: "left"
                mode: "outlined"
                multiline : False
                radius: 20

                MDTextFieldHintText:
                    text: "Código de Recuperação"

                MDTextFieldHelperText:
                    id: text_helper
                    text: "Insira o código enviado para o seu e-mail"
                    mode: "persistent"



        MDBoxLayout:
            pos_hint: {"center_x": 0.5}
            spacing: "10dp"

            #md_bg_color: [0.98, 0.35, 0.49, 0.1]
            orientation: "vertical"
            adaptive_height: True


            MDButton:
                style: "filled"
                pos_hint: {"top": 1, "center_x": 0.5}
                theme_width: "Custom"
                height: "56dp"
                size_hint_x: .6
                on_release: app.verificar_codigo_recuperacao(campo_codigo_recuperacao.text)

                MDButtonText:
                    pos_hint: {"center_x": .5, "center_y": .5}
                    text: "VERIFICAR"
                    font_style: "Title"



        MDLabel:
            theme_label_color: "Custom"
            halign: "center"
            valign: "bottom"
            #md_bg_color: [0.68, 0.55, 0.69, 0.1]
            radius: 15
