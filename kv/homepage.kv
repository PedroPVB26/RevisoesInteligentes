<HomePage>:
    MDButton:
        id: botao_revisar
        style: "filled"
        pos_hint: {"center_x": .40, "center_y": .85}
        theme_width: "Custom"
        height: "56dp"
        size_hint_x: .6
        on_release: print("Começando revisão")

        MDButtonText:
            text: "REVISAR"
            font_style: "Title"
            pos_hint: {"center_x": .5, "center_y": .5}

    MDIconButton:
        icon: "plus"
        style: "filled"
        theme_font_size: "Custom"
        font_size: "40sp"
        pos_hint: {"center_x": .85, "center_y": .85}
        on_release: print("Adicionar Palavra")


    MDScrollView:
        do_scroll_x: False
        pos_hint: {"center_x": .5, "center_y": .45}
        size_hint: .85, .6

        MDList:
            cols: 2
            id: lista_palavras
            spacing: "8dp"
