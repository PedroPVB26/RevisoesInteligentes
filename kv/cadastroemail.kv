<CadastroEmail>:
    name: "cadastroemail"
    MDBoxLayout:
        adaptive_height: True
        spacing: "20dp"
        orientation: "vertical"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size_hint: .9, .9


        MDLabel:
            theme_label_color: "Custom"
            #md_bg_color: [0.28, 0.35, 0.49, 0.1]
            size_hint: 1, 0.4
            font_style: "Headline"
            role: "medium"
            text: "BEM-VINDO!"
            halign: "center"
            radius: 15

        MDLabel:
            theme_label_color: "Custom"
            #md_bg_color: [0.28, 0.28, 0.28, 0.1]
            size_hint: 1, 0.4
            font_style: "Body"
            role: "small"
            text: "Pedimos que você faça um cadastro para que suas palavras fiquem salvas independentemente do dispositivo, permitindo que você possa revisá-las de qualquer outro aparelho caso o atual apresente defeito."
            text_color: [0.5, 0.5, 0.5, 1]
            halign: "justify"
            radius: 15

        MDBoxLayout:
            #md_bg_color: [0.28, 0.35, 0.9, 0.1]
            adaptive_height: True
            orientation: "vertical"
            spacing: "10dp"

            MDTextField:
                id: campo_email
                halign: "left"
                mode: "outlined"
                multiline : False
                radius: 20
                error: False
                on_text: app.verificar_email(campo_email)

                MDTextFieldTrailingIcon:
                    icon: "account"

                MDTextFieldHintText:
                    text: "E-MAIL"

                MDTextFieldHelperText:
                    text: "Insira um e-mail válido"
                    mode: "on_error"



        MDBoxLayout:
            pos_hint: {"center_x": 0.5}
            spacing: "10dp"

            #md_bg_color: [0.98, 0.35, 0.49, 0.1]
            orientation: "vertical"
            adaptive_height: True


            MDButton:
                style: "filled"
                pos_hint: {"top": 1, "center_x": 0.5}
                theme_width: "Custom"
                height: "56dp"
                width: "200dp"
                on_release: app.cadastrar_email(campo_email)


                MDButtonText:
                    pos_hint: {"center_x": .5, "center_y": .5}
                    text: "CONTINUAR"
                    font_style: "Title"


        MDLabel:
            theme_label_color: "Custom"
            halign: "center"
            valign: "bottom"
            #md_bg_color: [0.68, 0.55, 0.69, 0.1]
            radius: 15
